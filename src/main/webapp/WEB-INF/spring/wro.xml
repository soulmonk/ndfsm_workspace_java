<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd">

    <group name="all">
        <css>/webapp/stylesheets/standard.css</css>
    </group>

    <group name="less">
        <css>/resources/less/**.less</css>
    </group>

    <group name="angular">
        <js>/resources/angularApp/**.js</js>
    </group>

    <group name="angular.min">
        <js>/webapp/scripts/lib/angular/angular.js</js>
        <js>/webapp/scripts/lib/angular/angular-route.js</js>
        <js>/webapp/scripts/lib/angular/angular-resource.js</js>
        <js>/webapp/scripts/lib/angular/angular-cookies.js</js>
        <js>/webapp/scripts/lib/angular/angular-flash/directives/flash-alert-directive.js</js>
        <js>/webapp/scripts/lib/angular/angular-flash/services/flash-service.js</js>
        <js>/webapp/scripts/lib/angular/ng-table.js</js>
        <js>/webapp/scripts/lib/angular/angular-ui-router.js</js>
    </group>

    <group name="coffee">
        <js>/resources/coffeescript/angularApp/**.coffee</js>
    </group>

    <group name="mainJs">
        <js>/resources/coffeescript/mainJs/**.coffee</js>
    </group>

</groups>